<Window x:Class="WPF101.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Motorshop - CRUD" Height="520" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <!-- DataGrid -->
        <DataGrid Grid.Row="0" ItemsSource="{Binding Vehicles}" SelectedItem="{Binding SelectedVehicle, Mode=TwoWay}" 
                  AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" IsReadOnly="True" Width="60"/>
                <DataGridTextColumn Header="Make" Binding="{Binding Make}" Width="*"/>
                <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="*"/>
                <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="100"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Forms -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- Add new -->
            <GroupBox Header="Add New Vehicle" Margin="0,0,10,0">
                <StackPanel Margin="8">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <Label Width="60">Make:</Label>
                        <TextBox Text="{Binding NewMake, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <Label Width="60">Model:</Label>
                        <TextBox Text="{Binding NewModel, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <Label Width="60">Year:</Label>
                        <TextBox Text="{Binding NewYear, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <Label Width="60">Price:</Label>
                        <TextBox Text="{Binding NewPrice, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
                        <Button Content="Add" Command="{Binding AddCommand}" Width="80"/>
                        <Button Content="Refresh" Command="{Binding RefreshCommand}" Margin="10,0,0,0" Width="80"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Edit selected -->
            <GroupBox Header="Edit Selected Vehicle" Grid.Column="1">
                <StackPanel Margin="8">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <Label Width="60">Make:</Label>
                        <TextBox Text="{Binding SelectedVehicle.Make, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <Label Width="60">Model:</Label>
                        <TextBox Text="{Binding SelectedVehicle.Model, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <Label Width="60">Year:</Label>
                        <TextBox Text="{Binding SelectedVehicle.Year, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <Label Width="60">Price:</Label>
                        <TextBox Text="{Binding SelectedVehicle.Price, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
                        <Button Content="Update" Command="{Binding UpdateCommand}" Width="80" />
                        <Button Content="Delete" Command="{Binding DeleteCommand}" Width="80" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
